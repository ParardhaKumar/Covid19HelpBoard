<%- include("header") %>
<div class="wrapper">
  <div class="hero">

    <!-- NAV SECTION START -->
    <div class="nav">

    </div>

    <!-- NAV SECTION END -->

    <div class="row">
      <div class="col-6">
        <div class="caption">
          <div style="color:orange;">
            #India
          </div>Fights <br>
          <div style="color:green;">
            Corona
          </div>
        </div>

        <div class="subtext"> Welcome to the COVID-19 HelpBoard! </div>
        <div class="get-started">
          <button class="btn emer-but btn-success" onclick="window.location.href = '/sos/new';">Report an Emergency</button>
        </div>
      </div>
      <div class="col-6">
        <div class="counter">
          <div class="counter-border">
            <div class="row">
              <div class="col-4">
                <div class="counter-caption">
                  Number of Confirmed Cases
                </div>
                <div class="counter-number" id="cases"><%= total %></div>
              </div>
              <div class="col-4">
                <div class="counter-caption">
                  Number of Recoveries
                </div>
                <div class="counter-number" id="recov"><%= discharged %></div>
              </div>
              <div class="col-4">
                <div class="counter-caption">
                  Number of Deaths
                </div>
                <div class="counter-number" id="deaths"><%= deaths %></div>
              </div>
            </div>
            <div class="row">
              <div class="col-10">
                <div class="source-text">
                  Source: <a href="https://www.mohfw.gov.in/"> The Ministry of Health and Family Welfare </a>
                </div>
              </div>
              <div class="col-2">

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
  <div class="landing_section">

  </div>
  <%- include("footer") %>
</div>
