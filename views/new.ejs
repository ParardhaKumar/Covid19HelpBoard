<%- include("header") %>
<body>
<div class="form-wrapper">
  <div class="hero">

    <div class="form-container">
      <div class="row">
        <div class="col-lg-6 col-sm-12 col-xs-12">
          <div class="v-align">
            <div class="head-center">
              Please Enter your Details below, we'll get back to you ASAP
            </div>
            <div class="row">
              <div class="col-12">
                <div class="form-box">
                  <form action="/sos" method="POST">
                    <label for="pin">Pincode</label>
                    <input type="text" name="pincode" class="form-control form-control-lg" id="pin" onkeypress="retrieveState()" onkeyup="retrieveState()" placeholder="Enter your Address Pincode">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control form-control-lg" id="name" placeholder="Enter your full name">
                    <label for="address">Address</label>
                    <input type="text" name="address" class="form-control form-control-lg" id="address" placeholder="Enter your Address">
                    <label for="contactno">Contact Number</label>
                    <input type="text" name="contact" class="form-control form-control-lg" id="contactno" placeholder="10 Digit Phone Number">
                    <label for="requirement">Requirement</label> <br>
                    <div class="form-control-lg form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" name="medicine" value="True">
                      <label class="form-check-label" for="meds">Medicine</label>
                    </div>
                    <div class="form-control-lg form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" name="ration" value="True">
                      <label class="form-check-label" for="rations">Rations</label>
                    </div>
                    <div class="form-control-lg form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" name="ambulance" value="True">
                      <label class="form-check-label" for="ambulance">Ambulance</label>
                    </div>
                    <input type="text" name="requirement" class="form-control form-control-lg" name="requirement" placeholder="Any other requirements">
                    <center><button class="btn btn-success form-submit">Submit!</button></center>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-sm-12 col-xs-12">
          <div class="v-align-no-box">
            <div class="head-center">
              <div class="map-container"> STAY INSIDE, STAY SAFE. HELP IS ON THE WAY!
                <div id="displayState">YOU ARE IN </div>
                <div id="displayNum">YOUR EMERGENCY CONTACT: </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("footer") %>
